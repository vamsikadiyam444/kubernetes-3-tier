pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME  = 'my-app-repo'
        KUBECONFIG = "${WORKSPACE}/.kube/config"
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '529589763090', description: 'AWS Account ID')
    }

    stages {

        stage('Debug: Check Environment') {
            steps {
                sh '''
                    echo "=== Hostname ==="
                    hostname
                    echo "=== User ==="
                    whoami
                    echo "=== AWS CLI ==="
                    aws --version
                    echo "=== kubectl (system) ==="
                    which kubectl || true
                    kubectl version --client || true
                '''
            }
        }

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Source') {
            steps {
                checkout scm
                echo "=== Workspace Structure ==="
                sh 'ls -R .'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                dir('backend') {
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    dir('backend') {
                        sh 'test -f Dockerfile'
                    }

                    sh 'docker system prune -f'

                    sh """
                        docker build \
                          -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} \
                          backend
                    """

                    withCredentials([
                        string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                    ]) {
                        sh """
                            aws ecr get-login-password --region ${AWS_DEFAULT_REGION} |
                            docker login --username AWS --password-stdin \
                            ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com
                        """
                    }

                    sh """
                        docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} \
                          ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}

                        docker push \
                          ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                    """

                    sh """
                        trivy image \
                          ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} \
                          > trivyimage.txt
                    """
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([
                    string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                ]) {
                    sh """
                        set -e

                        echo "=== Install kubectl v1.30 ==="
                        curl -sLO https://dl.k8s.io/release/v1.30.0/bin/linux/amd64/kubectl
                        chmod +x kubectl
                        KUBECTL_BIN=\${WORKSPACE}/kubectl
                        \${KUBECTL_BIN} version --client

                        echo "=== Create AWS wrapper ==="
                        cat > \${WORKSPACE}/aws-wrapper.sh <<'EOF'
#!/bin/bash
output=\$(/usr/local/bin/aws "\$@")
if [[ "\$*" == *"get-token"* ]]; then
    echo "\$output" | sed 's/v1alpha1/v1beta1/g'
else
    echo "\$output"
fi
EOF
                        chmod +x \${WORKSPACE}/aws-wrapper.sh

                        echo "=== Fetch EKS cluster info ==="
                        CERT_DATA=\$(aws eks describe-cluster \
                          --name my-eks-cluster \
                          --region ${AWS_DEFAULT_REGION} \
                          --query cluster.certificateAuthority.data \
                          --output text)

                        ENDPOINT=\$(aws eks describe-cluster \
                          --name my-eks-cluster \
                          --region ${AWS_DEFAULT_REGION} \
                          --query cluster.endpoint \
                          --output text)

                        echo "=== Create kubeconfig ==="
                        mkdir -p ${WORKSPACE}/.kube

                        cat > ${KUBECONFIG} <<EOF
apiVersion: v1
kind: Config
clusters:
- name: my-cluster
  cluster:
    certificate-authority-data: \${CERT_DATA}
    server: \${ENDPOINT}
contexts:
- name: my-context
  context:
    cluster: my-cluster
    user: my-user
current-context: my-context
users:
- name: my-user
  user:
    exec:
      apiVersion: client.authentication.k8s.io/v1beta1
      command: \${WORKSPACE}/aws-wrapper.sh
      args:
      - eks
      - get-token
      - --cluster-name
      - my-eks-cluster
      - --region
      - ${AWS_DEFAULT_REGION}
EOF

                        export KUBECONFIG=${KUBECONFIG}

                        echo "=== Verify cluster access ==="
                        \${KUBECTL_BIN} get nodes

                        echo "=== Update deployment image ==="
                        sed -i "s|image: .*|image: ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}|g" \
                        ${WORKSPACE}/Kubernetes-Manifests-file/Backend/deployment.yaml

                        echo "=== Apply manifests ==="
                        \${KUBECTL_BIN} apply \
                          -f ${WORKSPACE}/Kubernetes-Manifests-file/Backend/deployment.yaml \
                          -n three-tier

                        echo "=== Wait for rollout ==="
                        \${KUBECTL_BIN} rollout status deployment/api -n three-tier
                    """
                }
            }
        }
    }

    post {
        success {
            echo '✅ Backend pipeline succeeded'
        }
        failure {
            echo '❌ Backend pipeline failed'
        }
    }
}
