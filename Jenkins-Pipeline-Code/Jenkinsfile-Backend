pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME = 'mybe-app'
        SONAR_HOST_URL = 'http://52.90.253.120:9000'
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '', description: 'AWS Account ID')
    }

    stages {
        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('SonarQube Analysis (Docker)') {
            steps {
                dir('Jenkins-Pipeline-Code/Backend') {
                    withCredentials([string(credentialsId: 'sonar-be-token', variable: 'SONAR_TOKEN')]) {
                        sh """
                        docker run --rm \
                            -v \${WORKSPACE}/Jenkins-Pipeline-Code/Backend:/usr/src \
                            sonarsource/sonar-scanner-cli \
                            -Dsonar.projectKey=three-tier-backend \
                            -Dsonar.projectName=three-tier-backend \
                            -Dsonar.host.url=$SONAR_HOST_URL \
                            -Dsonar.login=$SONAR_TOKEN
                        """
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true, credentialsId: 'sonar-be-token'
            }
        }

        stage('Dependency & Security Scans') {
            steps {
                dir('Jenkins-Pipeline-Code/Backend') {
                    dependencyCheck additionalArguments: '--scan ./ --disableYarnAudit --disableNodeAudit', odcInstallation: 'DP-Check'
                    dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('Jenkins-Pipeline-Code/Backend') {
                    script {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh "docker build -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ."
                        sh """
                            aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | \
                            docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/
                        """
                        sh "docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}"
                        sh "docker push ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}"
                        sh "trivy image ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} > trivyimage.txt"
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                dir('Kubernetes-Manifests-file/Backend') {
                    sh """
                        kubectl set image deployment/api api=${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} -n three-tier
                        kubectl rollout status deployment/api -n three-tier
                    """
                }
            }
        }
    }

    post {
        failure { echo "❌ Backend pipeline failed" }
        success { echo "✅ Backend pipeline succeeded" }
    }
}
