pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME  = 'my-app-repo'
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '529589763090', description: 'AWS Account ID')
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Docker Test') {
            steps {
                sh '''
                  echo "Docker version:"
                  docker --version
                  echo "Docker running containers:"
                  docker ps
                '''
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                dir('Jenkins-Pipeline-Code/Backend') {
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('backend') {
                    script {
                        sh 'docker system prune -f'
                        sh "docker build -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ."

                        sh """
                          aws ecr get-login-password --region ${AWS_DEFAULT_REGION} |
                          docker login --username AWS --password-stdin \
                          ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com
                        """

                        sh "docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}"
                        sh "docker push ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}"

                        sh "trivy image ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} > trivyimage.txt"
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh """
                  aws eks update-kubeconfig --region ${AWS_DEFAULT_REGION} --name my-eks-cluster
                  kubectl set image deployment/api api=${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} -n default
                  kubectl rollout status deployment/api -n default
                """
            }
        }
    }

    post {
        success { echo '✅ Backend pipeline succeeded' }
        failure { echo '❌ Backend pipeline failed' }
    }
}
