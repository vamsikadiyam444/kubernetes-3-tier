pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME  = 'my-app-repo'
        KUBECONFIG = "${WORKSPACE}/.kube/config" // workspace kubeconfig
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '529589763090', description: 'AWS Account ID')
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Source') {
            steps {
                checkout scm
                sh 'echo "=== Workspace Contents ==="'
                sh 'ls -R .'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                dir('backend') {
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    dir('backend') {
                        sh 'echo "=== Backend Directory ==="'
                        sh 'pwd'
                        sh 'ls -la'
                        sh 'if [ ! -f Dockerfile ]; then echo "ERROR: Dockerfile missing"; exit 1; fi'
                    }

                    sh 'docker system prune -f'

                    sh """
                        docker build -f ${WORKSPACE}/backend/Dockerfile \
                                     -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} \
                                     ${WORKSPACE}/backend
                    """

                    withCredentials([
                        string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                    ]) {
                        sh """
                            aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | \
                            docker login --username AWS --password-stdin ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com
                        """
                    }

                    sh """
                        docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} \
                                   ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                        docker push ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                    """

                    sh """
                        trivy image ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} > trivyimage.txt
                    """
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([
                    string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                ]) {
                    sh """
                        # Ensure workspace kubeconfig directory exists
                        mkdir -p ${WORKSPACE}/.kube

                        # Create kubeconfig manually with correct API version
                        cat > ${KUBECONFIG} <<EOF
apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: \$(aws eks describe-cluster --name my-eks-cluster --region ${AWS_DEFAULT_REGION} --query 'cluster.certificateAuthority.data' --output text)
    server: \$(aws eks describe-cluster --name my-eks-cluster --region ${AWS_DEFAULT_REGION} --query 'cluster.endpoint' --output text)
  name: arn:aws:eks:${AWS_DEFAULT_REGION}:${params.ACCOUNT_ID}:cluster/my-eks-cluster
contexts:
- context:
    cluster: arn:aws:eks:${AWS_DEFAULT_REGION}:${params.ACCOUNT_ID}:cluster/my-eks-cluster
    user: arn:aws:eks:${AWS_DEFAULT_REGION}:${params.ACCOUNT_ID}:cluster/my-eks-cluster
  name: arn:aws:eks:${AWS_DEFAULT_REGION}:${params.ACCOUNT_ID}:cluster/my-eks-cluster
current-context: arn:aws:eks:${AWS_DEFAULT_REGION}:${params.ACCOUNT_ID}:cluster/my-eks-cluster
kind: Config
preferences: {}
users:
- name: arn:aws:eks:${AWS_DEFAULT_REGION}:${params.ACCOUNT_ID}:cluster/my-eks-cluster
  user:
    exec:
      apiVersion: client.authentication.k8s.io/v1beta1
      args:
      - eks
      - get-token
      - --cluster-name
      - my-eks-cluster
      - --region
      - ${AWS_DEFAULT_REGION}
      command: aws
      interactiveMode: IfAvailable
      provideClusterInfo: false
EOF

                        export KUBECONFIG=${KUBECONFIG}

                        # Verify access
                        kubectl get nodes

                        # Update deployment.yaml with the correct image
                        sed -i "s|image: .*|image: ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}|g" ${WORKSPACE}/k8s/deployment.yaml

                        # Apply deployment
                        kubectl apply -f ${WORKSPACE}/k8s/deployment.yaml -n three-tier

                        # Wait for rollout
                        kubectl rollout status deployment/api -n three-tier
                    """
                }
            }
        }
    }

    post {
        success { echo '✅ Backend pipeline succeeded' }
        failure { echo '❌ Backend pipeline failed' }
    }
}
