pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME  = 'my-app-repo'
        // Use workspace kubeconfig to avoid /home/jenkins permission issues
        KUBECONFIG = "${WORKSPACE}/.kube/config"
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '529589763090', description: 'AWS Account ID')
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Source') {
            steps {
                checkout scm
                sh 'echo "=== Workspace Contents ==="'
                sh 'ls -R .'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                dir('backend') {
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    dir('backend') {
                        sh 'echo "=== Backend Directory ==="'
                        sh 'pwd'
                        sh 'ls -la'
                        sh 'if [ ! -f Dockerfile ]; then echo "ERROR: Dockerfile missing"; exit 1; fi'
                    }

                    sh 'docker system prune -f'

                    sh """
                        docker build -f ${WORKSPACE}/backend/Dockerfile -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ${WORKSPACE}/backend
                    """

                    withCredentials([
                        string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                    ]) {
                        sh """
                            aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | \
                            docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com
                        """
                    }

                    sh """
                        docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                        docker push ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                    """

                    sh """
                        trivy image ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} > trivyimage.txt
                    """
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([
                    string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                ]) {
                    sh """
                        # Ensure workspace kubeconfig directory exists
                        mkdir -p ${WORKSPACE}/.kube

                        # Generate kubeconfig if it doesn't exist
                        if [ ! -f \$KUBECONFIG ]; then
                            aws eks update-kubeconfig --region ${AWS_DEFAULT_REGION} --name my-eks-cluster --kubeconfig \$KUBECONFIG
                        fi

                        # Replace old apiVersion for authentication
                        sed -i 's/client.authentication.k8s.io\\/v1alpha1/client.authentication.k8s.io\\/v1beta1/' \$KUBECONFIG

                        # Verify cluster access
                        kubectl --kubeconfig \$KUBECONFIG get nodes

                        # Deploy the image
                        kubectl --kubeconfig \$KUBECONFIG set image deployment/api api=${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} -n default
                        kubectl --kubeconfig \$KUBECONFIG rollout status deployment/api -n default
                    """
                }
            }
        }
    }

    post {
        success { echo '✅ Backend pipeline succeeded' }
        failure { echo '❌ Backend pipeline failed' }
    }
}
