pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME  = 'my-app-repo'
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '529589763090', description: 'AWS Account ID')
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                dir('backend') {
                    sh 'trivy fs . > trivyfs.txt || true'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('backend') {
                    script {
                        // Clean old Docker cache
                        sh 'docker system prune -f'

                        // Build Docker image
                        sh 'docker build -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} .'
                    }

                    // AWS ECR Login and Push using Jenkins credentials
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'aws-creds', // Replace with your actual Jenkins credentials ID
                            usernameVariable: 'AWS_ACCESS_KEY_ID',
                            passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                        )
                    ]) {
                        sh """
                            echo "Logging in to AWS ECR..."
                            aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | \
                            docker login --username AWS --password-stdin ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com

                            echo "Tagging image..."
                            docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}

                            echo "Pushing image to ECR..."
                            docker push ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}

                            echo "Running Trivy image scan..."
                            trivy image ${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} > trivyimage.txt || true
                        """
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh """
                  aws eks update-kubeconfig --region ${AWS_DEFAULT_REGION} --name my-eks-cluster
                  kubectl set image deployment/api api=${ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} -n default
                  kubectl rollout status deployment/api -n default
                """
            }
        }
    }

    post {
        success { echo '✅ Backend pipeline succeeded' }
        failure { echo '❌ Backend pipeline failed' }
    }
}
