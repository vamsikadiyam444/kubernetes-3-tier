pipeline {
    agent any

    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ECR_REPO_NAME  = 'my-frontend-repo' // change to your frontend ECR repo
        KUBECONFIG = "${WORKSPACE}/.kube/config"
    }

    parameters {
        string(name: 'ACCOUNT_ID', defaultValue: '529589763090', description: 'AWS Account ID')
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Source') {
            steps {
                checkout scm
                sh 'echo "=== Workspace Contents ==="'
                sh 'ls -R .'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                script {
                    def frontendDir = "${WORKSPACE}/Application-Code/frontend"
                    dir(frontendDir) {
                        sh 'trivy fs . > trivyfs.txt || true'
                    }
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    def frontendDir = "${WORKSPACE}/Application-Code/frontend"

                    // Check Dockerfile exists
                    if (!fileExists("${frontendDir}/Dockerfile")) {
                        error "Dockerfile missing at ${frontendDir}"
                    }

                    dir(frontendDir) {
                        sh 'echo "=== Frontend Directory ==="'
                        sh 'pwd'
                        sh 'ls -la'

                        sh 'docker system prune -f'

                        // Build Docker image
                        sh """
                            docker build -t ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} .
                        """
                    }

                    // Login to ECR
                    withCredentials([
                        string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                    ]) {
                        sh """
                            aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | \
                            docker login --username AWS --password-stdin ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com
                        """
                    }

                    // Tag and push image
                    sh """
                        docker tag ${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} \
                                   ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                        docker push ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}
                    """

                    // Trivy scan for image
                    sh """
                        trivy image ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER} > trivyimage.txt || true
                    """
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([
                    string(credentialsId: 'Access Key ID', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'Secret Access Key', variable: 'AWS_SECRET_ACCESS_KEY')
                ]) {
                    script {
                        // Kubectl wrapper & kubeconfig
                        def frontendDir = "${WORKSPACE}/Application-Code/frontend"
                        def deploymentFile = "${WORKSPACE}/Kubernetes-Manifests-file/Frontend/deployment.yaml"
                        def serviceFile    = "${WORKSPACE}/Kubernetes-Manifests-file/Frontend/service.yaml"

                        sh """
                            set -e

                            # Install kubectl
                            curl -sLO https://dl.k8s.io/release/v1.30.0/bin/linux/amd64/kubectl
                            chmod +x kubectl
                            KUBECTL_BIN=\${WORKSPACE}/kubectl

                            # AWS wrapper for EKS token
                            cat > \${WORKSPACE}/aws-wrapper.sh <<'EOF'
#!/bin/bash
output=\$(/usr/local/bin/aws "\$@")
if [[ "\$*" == *"get-token"* ]]; then
    echo "\$output" | sed 's/v1alpha1/v1beta1/g'
else
    echo "\$output"
fi
EOF
                            chmod +x \${WORKSPACE}/aws-wrapper.sh

                            # Fetch cluster info
                            CERT_DATA=\$(aws eks describe-cluster --name my-eks-cluster --region us-east-1 --query cluster.certificateAuthority.data --output text)
                            ENDPOINT=\$(aws eks describe-cluster --name my-eks-cluster --region us-east-1 --query cluster.endpoint --output text)

                            mkdir -p ${WORKSPACE}/.kube
                            cat > ${KUBECONFIG} <<EOL
apiVersion: v1
clusters:
- cluster:
    certificate-authority-data: \${CERT_DATA}
    server: \${ENDPOINT}
  name: my-cluster
contexts:
- context:
    cluster: my-cluster
    user: my-user
  name: my-context
current-context: my-context
kind: Config
preferences: {}
users:
- name: my-user
  user:
    exec:
      apiVersion: client.authentication.k8s.io/v1beta1
      command: \${WORKSPACE}/aws-wrapper.sh
      args:
      - eks
      - get-token
      - --cluster-name
      - my-eks-cluster
      - --region
      - us-east-1
      env: null
EOL

                            export KUBECONFIG=${KUBECONFIG}

                            # Verify cluster access
                            \${KUBECTL_BIN} get nodes

                            # Ensure namespace exists
                            \${KUBECTL_BIN} get namespace three-tier || \${KUBECTL_BIN} create namespace three-tier

                            # Update deployment image
                            sed -i "s|image: .*|image: ${params.ACCOUNT_ID}.dkr.ecr.${AWS_DEFAULT_REGION}.amazonaws.com/${AWS_ECR_REPO_NAME}:${BUILD_NUMBER}|g" ${deploymentFile}

                            # Apply frontend deployment and service
                            \${KUBECTL_BIN} apply -f ${deploymentFile} -n three-tier
                            \${KUBECTL_BIN} apply -f ${serviceFile} -n three-tier

                            # Wait for rollout
                            \${KUBECTL_BIN} rollout status deployment/frontend -n three-tier
                        """
                    }
                }
            }
        }
    }

    post {
        success { echo '✅ Frontend pipeline succeeded' }
        failure { echo '❌ Frontend pipeline failed' }
    }
}
